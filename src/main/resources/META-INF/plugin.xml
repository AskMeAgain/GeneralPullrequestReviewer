<idea-plugin>
    <id>intellij.plugin.template</id>
    <name>IntellijPluginTemplate</name>
    <version>0.1</version>
    <vendor url="github url">You</vendor>

    <description>
        <!--........................this will be replaced by the pathPluginXml gradle task...........................-->
    </description>

    <idea-version since-build="213.4928.7"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Pullrequests" secondary="false"
                    icon="AllIcons.Diff.MagicResolveToolbar"
                    anchor="right"
                    factoryClass="io.github.askmeagain.pullrequest.PullrequestToolWindow"/>
        <diff.DiffExtension order="first" implementation="io.github.askmeagain.pullrequest.TextExtension"/>
    </extensions>

    <actions>
        <group id="io.github.askmeagain.pullrequest.group.pullrequests"
               text="History Group"
               popup="false">
            <action class="io.github.askmeagain.pullrequest.actions.RefreshMergeRequestListAction"
                    icon="AllIcons.Actions.Refresh"
                    text="RefreshMergeRequestList"
            />
        </group>
    </actions>

</idea-plugin>